<section class="position-relative">
  <div class="d-flex w-100 justify-content-between align-items-center bg-primary text-white position-fixed top-0 py-2">
    <%= link_to categories_path, class: "text-white nav-link" do %>
      <i class="bi bi-arrow-left"></i>
    <% end%>
    <p class="text-uppercase m-0">Expenses</p>
    <a href="#"  class="text-white nav-link"><i class="bi bi-search"></i></a>  
  </div>

  <div title="Add expense" class="fs-1 position-fixed bottom-0 end-0 px-4 pb-3">
    <%= link_to new_expense_path do %>
      <i class="bi bi-plus-circle-fill"></i>
    <% end%>
  </div>
  <% if @expenses.present? %>
    <ul class="list-group mx-0 mt-3 px-2">
      <% @expenses.each do |expense| %>
        <li>
          <p><%= expense.name %></p>
          <p><%= expense.amount %></p>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>
